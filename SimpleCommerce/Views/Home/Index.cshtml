<!-- SLIDER -->
<section id="slider" class="no-padding">
    <div id="slider-carousel" class="boxed-slider">
        @foreach (var item in ViewBag.Slides)
        {
        <div style="background-image:url('/Uploads/@item.Photo');" class="owl-bg-img">

            <div class="container-fullscreen">
                <div class="text-middle">
                    <a style="display:block;width:100%;height:100%;" href="@item.Url">&nbsp;</a>
                </div>
            </div>
        </div>
        }
    </div>
</section>
<!-- END: SLIDER -->

<!-- SHOP PRODUCTS -->
<section>
    <div class="container">

        <div class="heading m-b-40">
            <h4>Öne Çıkan Ürünler</h4>
        </div>

        <!--Product list-->
        <div class="shop">
            <div class="row">
                @foreach (var product in ViewBag.FeaturedProducts)
                {
                <div class="col-md-3">
                    <div class="product">
                        <div class="product-image">
                            <a href="/#">
                                <img alt="@product.Name" src="~/Uploads/@product.Photo" style="width:100%;">
                            </a>
                            <span class="product-new">NEW</span>
                            <span class="product-wishlist">
                                <a href="/#"><i class="fa fa-heart"></i></a>
                            </span>
                            <div class="product-overlay">
                                <a href="/include/ajax/example-shop-product.html" data-lightbox-type="ajax">Quick View</a>
                            </div>
                        </div>

                        <div class="product-description">
                            <div class="product-category">@product.Category.Name</div>
                            <div class="product-title">
                                <h3>@product.Name</h3>
                            </div>
                            <div class="product-price">
                                <ins>₺@product.Price</ins>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- END: SHOP PRODUCTS -->
<!-- DELIVERY INFO -->
